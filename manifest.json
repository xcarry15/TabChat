{
  "manifest_version": 3,
  "name": "TabChat",
  "short_name": "TabChat",
  "version": "0.3.0",
  "description": "TabChat 是一个覆盖新标签页的轻量级“搜索 + AI 对话”扩展。顶部显示时间，底部为输入栏：按 Enter 用默认搜索引擎；按 Ctrl+Enter 让本地配置的 AI 模型进行流式回复。",
  "minimum_chrome_version": "114",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage",
    "search"
  ],
  "host_permissions": [
    "https://api.siliconflow.cn/*",
    "https://*.siliconflow.cn/*"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png"
  }
}

